{
  "name": "kipl",
  "displayName": "Kipl",
  "description": "Kipl programming language support",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
		"type": "git",
		"url": "https://github.com/kipl-lang/vscode-supprt"
	},
  "keywords": [
		"Kipl",
		"kipl"
	],
  "contributes": {
    "languages": [{
      "id": "kipl",
      "aliases": ["Kipl", "kipl"],
      "extensions": [".kipl"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "kipl",
      "scopeName": "source.kipl",
      "path": "./syntaxes/kipl.tmLanguage.json"
    }],
    "fileAssociations": [
			{
				"language": "kipl",
				"pattern": "*.kipl",
				"icon": "images/icon.png"
			}
		]
  }
}
